        <Label x:Name="lblerro" Content="Favor Selecionar um estado!" HorizontalAlignment="Left" Margin="79,200,0,0" VerticalAlignment="Top" Width="633" Background="#00000000" Foreground="#FFF50D0D" HorizontalContentAlignment="Center"/>

